<!DOCTYPE html>
<html>
<head>
  <title>WithinAWeek</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%#= notice %>
  <%#= debug(flash) %>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "About", about_path %></li>
    </ul>
    <ul id="user-login-controls" class="pull-right">
      <% if user_signed_in? %>
        <li><small>Signed in as: </small><strong><%= current_user.email %></strong></li>
        <li><%= link_to "Profile", user_path(current_user.id), class: "navbar-link" %></li>
        <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "navbar-link" %></li>
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path, class: "navbar-link" %></li>
        <li><%= link_to "Sign In", new_user_session_path, class: "navbar-link" %></li>
      <% end %>
    </ul>

    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:error] %>
        <div class="alert alert-danger">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:error] %>
        </div>
      <% end %>
    </div>

    <%= yield %>
  </div>

</body>
</html>
